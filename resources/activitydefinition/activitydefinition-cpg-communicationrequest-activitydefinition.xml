<ActivityDefinition xmlns="http://hl7.org/fhir">
	<id value="cpg-communicationrequest-activitydefinition"/>
	<url value="http://hl7.org/fhir/uv/cpg/ActivityDefinition/cpg-communicationrequest-activitydefinition"/>
	<identifier>
		<use value="official"/>
		<value value="CPGCommunicationRequestActivityDefinition"/>
	</identifier>
	<version value="0.1.0"/>
	<name value="CPGCommunicationRequestActivityDefinition"/>
	<title value="CPG CommunicationRequest ActivityDefinition"/>
	<status value="draft"/>
	<experimental value="false"/>
	<date value="2019-06-23"/>
	<kind value="CommunicationRequest"/>
	<profile value="http://hl7.org/fhir/uv/cpg/StructureDefinition/cpg-communicationrequest"/>
	<doNotPerform value="false"/>
	<!-- Set status to the string value 'draft' -->
	<dynamicValue>
		<path value="status"/>
		<expression>
			<language value="text/cql-expression"/>
			<expression value="'draft'"/>
		</expression>
	</dynamicValue>
	<!-- Set category to the CategoryCodeableConcept parameter -->
	<dynamicValue>
		<path value="category"/>
		<expression>
			<language value="text/cql-expression"/>
			<expression value="CategoryCodeableConcept"/>
		</expression>
	</dynamicValue>
	<!-- Set priority to the string value 'routine' -->
	<dynamicValue>
		<path value="priority"/>
		<expression>
			<language value="text/cql-expression"/>
			<expression value="'routine'"/>
		</expression>
	</dynamicValue>
	<!-- Set subject to the Patient context, note that this will result in a Patient,
	but is being assigned to a Reference, implementation will need to sort this, or
	CQL will need to construct a reference -->
	<dynamicValue>
		<path value="subject"/>
		<expression>
			<language value="text/cql-expression"/>
			<expression value="Patient"/>
			<!--expression value="Reference { reference: 'Patient/' + Patient.id }" /-->
		</expression>
	</dynamicValue>
	<!-- Set encounter to the Encounter parameter, note that this will result in an Encounter,
	but is being assigned to a Reference, implementation will need to sort this,
	or CQL will need to construct a reference -->
	<dynamicValue>
		<path value="encounter"/>
		<expression>
			<language value="text/cql-expression"/>
			<expression value="Encounter"/>
			<!--expression value="Reference { reference: 'Encounter/' + Encounter.id }" /-->
		</expression>
	</dynamicValue>
	<!-- Reference to a Practitioner parameter, note that this will result in a Practitioner,
	but is being assigned to a Reference, implementation will need to sort this,
	or CQL will need to construct a reference -->
	<dynamicValue>
		<path value="requester"/>
		<expression>
			<language value="text/cql-expression"/>
			<expression value="Practitioner"/>
			<!--expression value="Reference { reference: 'Practitioner/' + Practitioner.id}" /-->
		</expression>
	</dynamicValue>
	<!-- Set recipient to the Patient context, note that this will result in a Patient,
	but is being assigned to a Reference, implementation will need to sort this, or
	CQL will need to construct a reference -->
	<dynamicValue>
		<path value="recipient"/>
		<expression>
			<language value="text/cql-expression"/>
			<expression value="Patient"/>
			<!--expression value="Reference { reference: 'Patient/' + Patient.id }" /-->
		</expression>
	</dynamicValue>
</ActivityDefinition>

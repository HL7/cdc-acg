{
  "resourceType": "StructureDefinition",
  "id": "cpg-groupdefinition",
  "url": "http://hl7.org/fhir/uv/cpg/StructureDefinition/cpg-groupdefinition",
  "name": "CPGGroupDefinition",
  "title": "CPG Group Definition",
  "status": "active",
  "experimental": false,
  "description": "Represents the definition of a group of subjects, suitable for use in various contexts, such as a cohort definition, a recommendation inclusion or exclusion criteria, the members of a study, or a population criteria",
  "fhirVersion": "4.0.1",
  "mapping": [
    {
      "identity": "rim",
      "uri": "http://hl7.org/v3",
      "name": "RIM Mapping"
    },
    {
      "identity": "w5",
      "uri": "http://hl7.org/fhir/fivews",
      "name": "FiveWs Pattern Mapping"
    }
  ],
  "kind": "resource",
  "abstract": false,
  "type": "Group",
  "baseDefinition": "http://hl7.org/fhir/StructureDefinition/Group",
  "derivation": "constraint",
  "differential": {
    "element": [
      {
        "id": "Group",
        "path": "Group",
        "constraint": [
          {
            "key": "gdf-1",
            "severity": "error",
            "human": "Group definition must have either an expression or characteristics, but not both",
            "expression": "extension('http://hl7.org/fhir/StructureDefinition/cqf-expression').exists() xor characteristic.exists()",
            "xpath": "exists(f:extension)",
            "source": "http://hl7.org/fhir/uv/cpg/StructureDefinition/cpg-groupdefinition"
          }
        ]
      },
      {
        "id": "Group.extension",
        "path": "Group.extension",
        "slicing": {
          "discriminator": [
            {
              "type": "value",
              "path": "url"
            }
          ],
          "ordered": false,
          "rules": "open"
        }
      },
      {
        "id": "Group.extension:expression",
        "path": "Group.extension",
        "sliceName": "expression",
        "min": 0,
        "max": "1",
        "type": [
          {
            "code": "Extension",
            "profile": [
              "http://hl7.org/fhir/StructureDefinition/cqf-expression"
            ]
          }
        ],
        "condition": [
          "gdf-1"
        ],
        "mustSupport": true
      },
      {
        "id": "Group.identifier",
        "path": "Group.identifier",
        "mustSupport": true
      },
      {
        "id": "Group.active",
        "path": "Group.active",
        "mustSupport": true
      },
      {
        "id": "Group.type",
        "path": "Group.type",
        "fixedCode": "person",
        "mustSupport": true
      },
      {
        "id": "Group.actual",
        "path": "Group.actual",
        "fixedBoolean": false,
        "mustSupport": true
      },
      {
        "id": "Group.code",
        "path": "Group.code",
        "mustSupport": true
      },
      {
        "id": "Group.name",
        "path": "Group.name",
        "min": 1,
        "mustSupport": true
      },
      {
        "id": "Group.characteristic",
        "path": "Group.characteristic",
        "condition": [
          "gdf-1"
        ],
        "mustSupport": true
      },
      {
        "id": "Group.member",
        "path": "Group.member",
        "max": "0"
      }
    ]
  }
}
